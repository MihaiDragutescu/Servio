<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallTypeDialog"
    android:layout_width="506dp"
    android:layout_height="140dp"
    android:background="@drawable/bkgr_animation"
    tools:context=".activities.NewWallActivity">

    <TextView
        android:id="@+id/titleTxtViewTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/activity_new_wall_title"
        android:textColor="@color/whiteColor"
        android:textSize="20sp"
        app:fontFamily="@string/font_family_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/whiteColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable" />

    <ImageView
        android:id="@+id/perete"
        android:tag="perete"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/perete_2"
        android:tag="perete_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete_2"
        app:layout_constraintStart_toEndOf="@+id/perete"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/perete_3"
        android:tag="perete_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete_3"
        app:layout_constraintStart_toEndOf="@+id/perete_2"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/perete_4"
        android:tag="perete_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete_4"
        app:layout_constraintStart_toEndOf="@+id/perete_3"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/perete_5"
        android:tag="perete_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete_5"
        app:layout_constraintStart_toEndOf="@+id/perete_4"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/perete_6"
        android:tag="perete_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/simple_border"
        android:src="@drawable/ic_launcher_foreground_perete_6"
        app:layout_constraintStart_toEndOf="@+id/perete_5"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtViewTable"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>